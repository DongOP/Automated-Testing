<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_top_bar"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="40dp">

        <ImageView
            android:id="@+id/iv_main_back"
            android:layout_width="@dimen/playing_main_back_button"
            android:layout_height="@dimen/playing_main_back_button"
            android:background="@drawable/ic_btn_back_selector"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/content_title_back_text_size" />

    </LinearLayout>

</RelativeLayout>